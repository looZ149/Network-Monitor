<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="NetworkMonitor.MainPage"  
            xmlns:vm="clr-namespace:NetworkMonitor.ViewModels"  
            xmlns:model="clr-namespace:NetworkMonitor.Models">  
   <!--View for MVVM -->
    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>
   
    <Grid RowDefinitions="100 ,Auto, *"
          ColumnDefinitions="Auto, .25*"
         
          BackgroundColor="Black">
        <Image Grid.RowSpan="1"
               Source="dotnet_bot.png"/>
        
        <Label Text="Network Devices"
               Grid.Row="1"
               Grid.Column="2"
               FontSize="28"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontAttributes="Bold"
               TextColor="DeepSkyBlue"
               BackgroundColor="Black"
               Margin="0, 0, 0, 100"/>
        <Border Grid.Row="3" 
                Grid.Column="2"
                Padding="10"/>
        <!--DEVICES CONTENT-->
        <VerticalStackLayout Grid.Row="3"
                             Grid.Column="2"
                             Padding="10">
            
        </VerticalStackLayout>
        
        <!--BUTTONS-->
        <VerticalStackLayout Grid.Row="2" Spacing="10">
            <Button Text="Ping Devices" 
                Grid.Row="2"
                HeightRequest="30"
                Command="{Binding PingAllCommand}"
                BackgroundColor="DeepSkyBlue"/>
            <Button Text="Add Device"
                    Grid.Row="2"
                    HeightRequest="30"
                    BackgroundColor="DeepSkyBlue"/>
            <Button Text="Ping DeviceID" 
                    Grid.Row="2"
                    HeightRequest="30"
                    BackgroundColor="DeepSkyBlue"/>
        </VerticalStackLayout>
        
    </Grid>
    
</ContentPage>
