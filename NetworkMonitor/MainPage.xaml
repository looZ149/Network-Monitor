<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="NetworkMonitor.MainPage"  
            xmlns:vm="clr-namespace:NetworkMonitor.ViewModels"  
            xmlns:model="clr-namespace:NetworkMonitor.Models">  
   <!--View for MVVM -->
    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>
   
    <Grid RowDefinitions="100 ,Auto, *"
          ColumnDefinitions="Auto, .25*"
         
          BackgroundColor="Black">
        <Image Grid.Column="2"
               Source="dotnet_bot.png"/>
        <Button Text="Ping devices" 
                Grid.Row="2"
                HeightRequest="50"
                WidthRequest="*"
                Margin="-5, 0, 0, 450"
                Padding="10"/>
        <Label Text="Network Devices"
               Grid.Row="1"
               Grid.Column="2"
               FontSize="28"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               TextColor="DeepSkyBlue"
               BackgroundColor="Black"/>
        <Border Grid.Row="3" 
                Grid.Column="2"
                Padding="10"/>
        <Border Grid.Row="2" 
                />
    </Grid>
    
</ContentPage>
